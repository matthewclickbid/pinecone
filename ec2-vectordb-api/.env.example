# Environment Configuration
ENVIRONMENT=development

# API Configuration
API_KEY=your-secure-api-key-here
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ALLOWED_ORIGINS=["*"]

# External Services - Metabase
METABASE_URL=https://cbmetabase.com
METABASE_API_KEY=mb_your_metabase_api_key_here
METABASE_QUESTION_ID=232

# External Services - OpenAI
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small
OPENAI_RATE_LIMIT=20

# External Services - Pinecone
PINECONE_API_KEY=pcsk_your_pinecone_api_key_here
PINECONE_INDEX_NAME=clickbidtest
PINECONE_NAMESPACE=v2
PINECONE_BATCH_SIZE=100

# AWS Configuration
AWS_REGION=us-east-1
DYNAMODB_TABLE_NAME=vectordb-tasks-ec2
S3_BUCKET_NAME=pineconeuploads

# Local File Configuration (for development/testing)
USE_LOCAL_FILES=false
LOCAL_CSV_FOLDER=/path/to/local/csv/files
# Set USE_LOCAL_FILES=true to use local filesystem instead of S3

# Redis Configuration (for Phase 2 - Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=optional_redis_password

# Processing Configuration
CHUNK_SIZE=1000
BATCH_SIZE=100
MAX_WORKERS=8
TASK_TIMEOUT=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s